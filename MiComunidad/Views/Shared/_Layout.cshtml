                        @Html.ActionLink("Cerrar", "CerrarSesion", "Usuarios", new { }, new { @class = "classImgCerrarSesion", data_toggle = "tooltip", data_placement = "bottom", data_original_title = "cerrar sesion", onclick = "return confirm('Estas seguro de cerrar sesion?');" })
                    </li>
