                </button>
                @if (Session["Login"] != null)
                {
                    @Html.Action("Logo", "Usuarios")
                }
                @*else
                {
                    Layout = "~/Views/Usuarios/Login.cshtml";
                }*@
               @* @Html.ActionLink("Mi Comunidad", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@

                    @*<li>@Html.ActionLink("Cliente", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Programa", "Index", "Programas")</li>
