@model IEnumerable<MiComunidad.Models.Cliente>   

@{
    ViewBag.Title = "Index";
}

<h2>Administrar Clientes</h2>

<p>
    @Html.ActionLink("Crear Nuevo Cliente", "Create")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ubicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ubicacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>

            @Html.ActionLink("Editar", "Edit", new { id = item.ClienteID }, new { @class = "classImgEditar", @title="Editar" }) 
        </td>
        <td>
            @Html.ActionLink("Detalle", "Details", new { id = item.ClienteID }, new { @class = "classImgDetalle", @title = "Detalle" }) 

        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ClienteID }, new { @class = "classImgEliminar", @title = "Eliminar" })

        </td>
</tr>
}

</table>
